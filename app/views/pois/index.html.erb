
<ul class="list-inline">
  <li data-filter="all", class="label label-default"> Tous </li>
  <% Category.all.each do |category| %>
    <li data-filter="<%= category.id %>", class="label label-default"> <%= category.name %> </li>
  <% end %>
</ul>
<div class="container">
  <h1>Liste des photos</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        <div class="filtr-container">
          <% @pois.each do |poi| %>
              <div class="filtr-item" data-category="<%= poi.category.id %>" data-sort="value">
                <div class="card">
                  <div class="card-content">

                    <% if poi.photo.present? %>
                      <%= cl_image_tag poi.photo.path, width: 250, height: 250, crop: :fill %>
                    <% else %>
                      <%= image_tag 'http://placehold.it/250x250' %>
                    <% end %>

                  </div>
                  <div class="card-footer">
                    <%= link_to poi.title, poi_path(poi) %>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div id="map" style="width: 100%; height: 600px;"></div>

        <% content_for(:after_js) do %>
          <%= javascript_tag do %>
            $(document).ready(function() {
              var handler = Gmaps.build('Google');
              handler.buildMap({provider: { styles: [{"featureType":"all","stylers":[{"saturation":0},{"hue":"#e7ecf0"}]},{"featureType":"road","stylers":[{"saturation":-70}]},{"featureType":"transit","stylers":[{"visibility":"off"}]},{"featureType":"poi","stylers":[{"visibility":"off"}]},{"featureType":"water","stylers":[{"visibility":"simplified"},{"saturation":-60}]}]  }, internal: { id: 'map' } }, function() {
                markers = handler.addMarkers(<%= raw @hash.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                if (markers.length == 0) {
                  handler.getMap().setZoom(2);
                } else if (markers.length == 1) {
                  handler.getMap().setZoom(14);
                }
              });
            });
          <% end %>
          <%= javascript_tag do %>
            $(document).ready(function() {
              var filterizd = $('.filtr-container').filterizr({

              });
            });
          <% end %>
        <% end %>
      <!-- </div> -->
    </div>
  </div>
</div>
